.banner
  background-color #fff

.main-slider
  position relative
  width 100%
  &__list
    display flex
    flex-wrap nowrap
    height auto
    margin 0
    padding 0
    list-style none

  &__item-wrapper
    position relative
    flex-shrink 0
    width 100%

  &__item
    position relative
    display flex
    width 100%
    height 450px
    border-radius 20px 20px 0 0
    overflow hidden
  
  &__image
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    z-index 0
    display block
    width 100%
    height 100%
    object-fit cover

  &__info
    position relative
    display flex
    align-items center
    justify-content center
    flex-direction column
    width 100%
    z-index 1
  &__heading
    margin 0 0 23px 0
    color #fff
    text-shadow 0 0 59px #007d2f
    font-size 60px
    font-weight 700
    line-height 45px
    text-transform uppercase
  &__description
    max-width 850px
    margin-bottom 24px
    & p:not([class])
      margin 0
      font-size 24px
      font-weight 700
      line-height 28px
      text-transform uppercase
      color #fff
      text-shadow 0 0 59px #007d2f

  &__pagination
    display flex