.footer
  &__container
    max-width 1240px
    width 100%
    margin 0 auto
    padding 0 20px
  &__top-wrap
    padding 43px 0 44px
    background-color #fff
  &__top
    display flex
    @media tablet-portrait-large
      flex-direction column
  &__sitemap
    flex-grow 1
  &__contacts
    flex-shrink 0
    max-width: 270px
    width 100%
    margin-left 40px
    @media tablet-portrait-large
      margin-left 0
  &__contacts-list
    margin-top 15px
  &__contacts-item
    color text-color
    font-size 15px
    line-height 23px
    &:not(:last-of-type)
      margin-bottom 18px
  &__contacts-hint
    font-weight 700
  &__contacts-location
    margin 0
  &__contacts-phone
    margin 0

  &__bottom-wrap 
    padding 45px 0 48px
    background-color #f7f7f7
  &__bottom 
    display flex
    flex-wrap wrap
    margin 0 -20px
  &__col
    position relative
    flex 0 0 25% 
    max-width 25%
    width 100%
    padding 0 20px
    @media tablet-portrait-large
      flex 0 0 33.333333%
      max-width 33.333333%
      margin-bottom 24px
    @media tablet-portrait-medium
      flex 0 0 50%
      max-width 50%
    @media phone
      flex 0 0 100%
      max-width 100%
  &__copyright
    margin 0 0 23px 0
    opacity 0.5
    color text-color
    font-size 15px
    line-height 23px
  &__email 
    display inline-flex
    position relative
    text-decoration none
    font-size 16px
    line-height 26px
    color text-color
    z-index 1
    transition color 0.3s
    &:hover 
      color text-color-hover
      &:after
        opacity 0
    &:after
      content ''
      position absolute
      left 0
      bottom 6px
      width 100%
      height 1px
      background-color text-color
      opacity 0.2
      transition opacity 0.3s

  &__phone
    display flex
    margin-bottom 5px
    font-size 16px
    line-height 26px
    text-decoration none
    color text-color
    transition color 0.3s
    &:hover 
      color text-color-hover

  &__badges
    display flex
  &__badge-wrap
    display flex
    width 91px
    height 82px
    &:not(:last-of-type)
      margin-right 20px

  &__badge-img
    max-width 100%
  
.sitemap
  display flex
  justify-content space-between
  @media tablet-portrait-small
    flex-wrap wrap
  &__list 
    max-width 270px
    width 100%
    @media tablet-portrait-small
      flex 0 0 48%  
      max-width 48%
    @media phone
      flex 0 0 100%
      max-width 100%
    &:not(:last-of-type)
      margin-right 40px
      @media tablet-portrait-small
        margin-right 0
  &__item 
    margin-bottom 29px
  &__link
    color text-color
    text-decoration none
    border-bottom 1px solid transparent
    transition 0.3s
    &:hover 
      border-bottom-color text-color
  &__sublinks
    margin-top 20px

.sublinks
  &__item
    display flex
    margin-bottom 16px
  &__link
    opacity 0.5
    color text-color
    font-size 15px
    line-height 16px
    border-bottom 1px solid transparent
    transition 0.3s
    text-decoration none
    &:hover 
      border-bottom-color text-color

.developer
  display flex
  flex-wrap nowrap
  align-items flex-start
  margin-top 5px
  &__link
    padding 5px 5px 4px 5px
    background-color main-color
    border-radius 4px
    font-size 12px
    font-weight 700
    line-height 12px
    text-transform uppercase
    color #fff
    letter-spacing 2.16px
    text-decoration none
    transition background-color .3s ease
    &:hover
        background-color green-hover
  &__hint
    margin-left 7px
    opacity 0.5
    color text-color
    font-family "Verdana"
    font-size 9px
    line-height 11px
    letter-spacing 1.62px
    text-transform uppercase
